@model modpackFront.DTO.MemberDTO

@functions {
    public string ActivePage(string actionName)
    {
        return (ViewBag.ActionName == actionName) ? "active" : "";
    }
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">
    <link rel="stylesheet" href="~/assets/css/vendor.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>@ViewData["Title"]</title>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-121642637-4');
    </script>
</head>
<body>
    <!-- 會員資料標題 -->
    <section class="hero hero-small bg-purple text-white">
        <div class="container">
            <div class="row gutter-2 gutter-md-4 align-items-end">
                <div class="col-md-6 text-center text-md-left">
                    <h1 class="mb-0">@Html.DisplayFor(model => model.Name)</h1>
                    <span class="text-muted">@Html.DisplayFor(model => model.LevelName)</span>
                </div>
                <!-- 會員編輯btn -->
                @* <div class="col-md-6 text-center text-md-right">
                    <a asp-action="Profile" class="btn btn-sm btn-outline-white">返回</a>
                </div> *@
            </div>
        </div>
    </section>
    <!-- 左邊選單 -->
    <section class="pt-5">
        <div class="container">
            <div class="row gutter-4 justify-content-between">
                <aside class="col-lg-3">
                    <div class="nav nav-pills flex-column lavalamp" id="sidebar-1" role="tablist">
                        <a class="nav-link @ActivePage("Profile")" asp-controller="UserProfile" asp-action="Profile" aria-controls="sidebar-1-1" aria-selected="@(ViewBag.ActionName == "Profile" ? "true" : "false")">基本資料</a>
                        <a class="nav-link @ActivePage("Edit")" asp-controller="UserProfile" asp-action="Edit" aria-controls="sidebar-1-2" aria-selected="@(ViewBag.ActionName == "Edit" ? "true" : "false")">編輯基本資料</a>
                        <a class="nav-link @ActivePage("ChangePassword")" asp-controller="UserProfile" asp-action="ChangePassword" aria-controls="sidebar-1-5" aria-selected="@(ViewBag.ActionName == "ChangePassword" ? "true" : "false")">修改會員密碼</a>
                    </div>
                </aside>

                <div class="col-lg-9">

                    <!-- 會員資料 -->
                    <form asp-action="Edit" asp-controller="UserProfile" method="post">
                        <div class="col-lg-9">
                            <div class="row">
                                <div class="col">
                                    <div class="tab-content" id="myTabContent">
                                        <!-- profile -->
                                        <div class="tab-pane fade show active" id="sidebar-1-1" role="tabpanel" aria-labelledby="sidebar-1-1">
                                            <div class="row mb-2">
                                                <div class="col-12">
                                                    <h3>編輯個人資訊</h3>
                                                </div>
                                            </div>
                                            <div class="row gutter-1">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input asp-for="@Model.id" type="hidden" />
                                                        <label asp-for="Name">會員名稱</label>
                                                        <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"></div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Phone">電話</label>
                                                        <input asp-for="Phone" type="text" class="form-control" value="@Model.Phone">
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Email">電子信箱</label>
                                                        <input asp-for="Email" type="email" class="form-control" value="@Model.Email">
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label asp-for="Address">地址</label>
                                                        <input asp-for="Address" type="text" class="form-control" value="@Model.Address">
                                                        <span asp-validation-for="Address" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                            <div class="row">
                                                <div class="col">

                                                    <button type="submit" class="btn btn-primary">儲存</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </section>

    <script src="~/assets/js/vendor.min.js"></script>
    <script src="~/assets/js/app.js"></script>
</body>

